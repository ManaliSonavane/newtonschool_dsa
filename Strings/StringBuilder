import java.util.*;
import java.io.*;

public class Main
{
	public static void main(String[] args) {
	    //StringBuilder
	    //in same StringBuilder the changes are happening, while in strings (str = str +"e",  str = str +"l")
      //here in every statmt new string is made.
      //SB requires less time and is efficient
	    StringBuilder sb=new StringBuilder("Tony");
	    System.out.println(sb);
	    
	    //at part. index
	    System.out.println(sb.charAt(0));
	    
	    //set Character at index
	    sb.setCharAt(0,'S');
	    System.out.println(sb);
	    
	    //inserting s in first position
	    //ssony : output
	    sb.insert(1,'T');
	    System.out.println(sb);
	    
	    //delete from starting to end index
	    //s delete
	    sb.delete(0,1);  //ending index is exclusive
	    System.out.println(sb);
	    
	    //append: joining in the ending
	    sb.append(" Stark");
	    System.out.println(sb);
	    sb.append('s');
	    System.out.println(sb);
	    
	    System.out.println(sb.length());
	    
	    
	}
}

/*	   
output:
Tony
T
Sony STony
Tony 
Tony Stark
Tony Starks
11
*/
